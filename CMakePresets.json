{
    "version": 6,
    "configurePresets": [
        {
            "name": "dev",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dev_tests",
            "inherits": "dev",
            "cacheVariables": {
                "ENABLE_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev-editor",
            "configurePreset": "dev",
            "targets":[
                "NarcEngineEditor"
            ],
            "cleanFirst": false
        },
        {
            "name": "release",
            "configurePreset": "release",
            "targets":[
                "NarcEngineEditor"
            ],
            "cleanFirst": true
        }
    ],
    "testPresets": [
        {
            "name": "tests",
            "configurePreset": "dev_tests"
        }
    ],
    "packagePresets": [
        {
            "name": "package",
            "configurePreset": "release"
        }
    ]
}