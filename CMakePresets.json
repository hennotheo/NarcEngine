{
    "version": 6,
    "configurePresets": [
        {
            "name": "dev",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RULE_MESSAGES": "OFF",
                "CMAKE_VERBOSE_MAKEFILE": "OFF",
                "CMAKE_CXX_FLAGS": "-Wno-deprecated-declarations"
            }
        },
        {
            "name": "release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dev_tests",
            "inherits": "dev",
            "binaryDir": "${sourceDir}/build_tests",
            "cacheVariables": {
                "ENABLE_TESTS": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev-editor",
            "configurePreset": "dev",
            "targets": [
                "NarcEngineEditor"
            ],
            "cleanFirst": false
        },
        {
            "name": "release",
            "configurePreset": "release",
            "targets": [
                "all"
            ],
            "cleanFirst": true
        }
    ],
    "testPresets": [
        {
            "name": "tests",
            "configurePreset": "dev_tests"
        }
    ],
    "packagePresets": [
        {
            "name": "package",
            "configurePreset": "release"
        }
    ]
}